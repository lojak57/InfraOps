{
	"name": "datatracker-platform",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"description": "Professional fleet and logistics operations management platform",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"start": "node build",
		"build:analyze": "vite build --mode analyze",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"deploy": "npm run build && echo 'Ready for Vercel deployment'",
		"component:size": "node scripts/component-size-report.js",
		"refactor:check": "npm run component:size && npm run lint",
		"pre-commit": "npm run lint && npm run test && npm run component:size"
	},
	"devDependencies": {
		"@playwright/test": "^1.52.0",
		"@sveltejs/adapter-auto": "^4.0.0",
		"@sveltejs/adapter-vercel": "^5.7.2",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/typography": "^0.5.16",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.8",
		"autoprefixer": "^10.4.21",
		"eslint": "^9.28.0",
		"jsdom": "^26.1.0",
		"postcss": "^8.5.4",
		"prettier": "^3.5.3",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^3.4.17",
		"typescript": "^5.0.0",
		"vite": "^6.0.0",
		"vitest": "^3.2.0"
	},
	"dependencies": {
		"@fontsource/fira-mono": "^5.2.6",
		"chart.js": "^4.4.9",
		"chartjs-adapter-date-fns": "^3.0.0",
		"date-fns": "^4.1.0",
		"lucide-svelte": "^0.511.0",
		"maplibre-gl": "^5.5.0"
	}
}
