		"autoprefixer": "^10.4.21",
		"postcss": "^8.5.4",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^3.4.17",
		"typescript": "^5.0.0",
		"vite": "^6.0.0"
	},
	"dependencies": {
		"chart.js": "^4.4.9",
